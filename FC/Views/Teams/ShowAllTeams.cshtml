@model IEnumerable<FC.Models.Team>

@{
    ViewBag.Title = "ShowAllTeams";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}
<h2>Команди</h2>

<p>
    @Html.ActionLink("Створити", "CreateTeam")
</p>
<div class="editor-field">
         <div><input name="search-input" type="text" id="search"/></div>
</div>
<table id="teams-table"class="table table-striped">
@Html.Partial("TeamsTable")
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/CommonFunctions.js")
@Scripts.Render("~/Scripts/jquery-2.1.1.js")
    <script type="text/javascript">
        $('#search').change(function () {
            var template = $('#search').val();
            var URL = '/Teams/ShowTeams/' + template;
            RenderPartial(URL, '#teams-table');
        });
    </script>
}