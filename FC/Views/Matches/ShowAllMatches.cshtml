@{
    ViewBag.Title = "ShowAllMatches";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Матчі</h2>
@Html.ActionLink("Створити","CreateMatch")
<div class="editor-field">
         <div><input name="search-input" type="text" id="search"/></div>
</div>
<table id="matches-table" class="table table-striped">
    @Html.Partial("MatchesTable")
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/CommonFunctions.js")
@Scripts.Render("~/Scripts/jquery-2.1.1.js")
    <script type="text/javascript">
        $('#search').change(function () {
            var template = $('#search').val();
            var URL = '/Matches/ShowMatches/' + template;
            RenderPartial(URL, '#matches-table');
        });
    </script>
}