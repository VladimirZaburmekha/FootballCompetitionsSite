@model IEnumerable<FC.Models.Coach>

@{
    ViewBag.Title = "ShowAllCoaches";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Всі тренери</h2>

<p>
    @Html.ActionLink("Створити", "CreateCoach")
</p>
<div class="editor-field">
         <div><input name="search-input" type="text" id="search"/></div>
</div>
<table id="coaches-table"class="table table-striped">
@Html.Partial("CoachesTable")
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/CommonFunctions.js")
@Scripts.Render("~/Scripts/jquery-2.1.1.js")
    <script type="text/javascript">
        
        $('#search').change(function () {
            var template = $('#search').val();
            var URL = '/Coaches/ShowCoaches/' + template;
            RenderPartial(URL, '#coaches-table');
        });
    </script>
}